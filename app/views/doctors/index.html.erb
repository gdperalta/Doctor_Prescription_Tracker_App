<%= render 'search_form' %>
<table class='table table-striped border'>
	<caption>List of Doctors</caption>
	<thead class='bg-primary'>
		<tr class='heading-color'>
			<th>
				<%= sort_link(@q, :doctor_name) do %>
					<strong class='text-white'>Name</strong>
				<% end %>
			</th>
			<th>Contact Number</th>
			<th>
				<%= sort_link(@q, :specialization) do %>
					<strong class='text-white'>Specialization</strong>
				<% end %>
			</th>
			<th>
				<%= sort_link(@q, :hospital) do %>
					<strong class='text-white'>Hospital</strong>
				<% end %>
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @doctors.each do |doctor| %>
			<tr>
				<td><%= link_to "#{doctor.doctor_name}", doctor, class: 'table-link' %></td>
				<td><%= doctor.doctor_phone %></td>
				<td><%= doctor.specialization %></td>
				<td><%= doctor.hospital %></td>
				<td>
					<div class="btn-group" role="group" aria-label="Basic outlined example">
						<%= link_to 'See Prescriptions', doctor_prescriptions_path(doctor), class: 'btn btn-outline-primary' %>
						<%= link_to 'Edit', edit_doctor_path(doctor), class: 'btn btn-outline-primary' %>
						<%= link_to 'Delete', doctor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-primary' %>
					</div>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= link_to 'Add New Doctor', new_doctor_path, class: 'btn btn-outline-success' %>
