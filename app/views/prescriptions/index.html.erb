<p id="notice"><%= notice %></p>
<h1>Doctor <%= @doctor.doctor_name%>'s Prescriptions</h1>
<div class="table-responsive">
	<table class='table table-striped table-hover'>
		<thead class='table-primary'>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Total cost</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @prescriptions.each do |prescription| %>
				<tr>
					<td><%= prescription.title %></td>
					<td><%= prescription.description %></td>
					<td><%= prescription.total_cost %></td>
					<td><%= link_to 'Show', doctor_prescription_path(@doctor, prescription) %></td>
					<td><%= link_to 'Edit', edit_doctor_prescription_path(@doctor, prescription) %></td>
					<td><%= link_to 'Destroy', doctor_prescription_path(@doctor, prescription), method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<br>
<%= link_to 'New Prescription', new_doctor_prescription_path %>
