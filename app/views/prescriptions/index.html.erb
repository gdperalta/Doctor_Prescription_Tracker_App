<p id="notice"><%= notice %></p>
<h1>Doctor <%= @doctor.doctor_name%>'s Prescriptions</h1>
<div class="table-responsive">
	<table class='table table-striped'>
		<thead class='bg-primary'>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Total cost</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @prescriptions.each do |prescription| %>
				<tr>
					<td><%= link_to "#{prescription.title}", doctor_prescription_path(@doctor, prescription), class: 'table-link' %></td>
					<td><%= prescription.description %></td>
					<td><%= prescription.total_cost %></td>
					<td>
						<div class="btn-group" role="group" aria-label="Basic outlined example">
							<%= link_to 'Edit', edit_doctor_prescription_path(@doctor, prescription), class: 'btn btn-outline-primary' %>
							<%= link_to 'Destroy', doctor_prescription_path(@doctor, prescription), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-primary' %>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<br>
<%= link_to 'New Prescription', new_doctor_prescription_path, class: 'btn btn-outline-success' %>
